{% include './register/register__form.twig' %}


<script type="text/javascript">
function formToggle(element){

	var elems = document.getElementsByClassName("farm_element");

	for (var i=0; i<elems.length; i++) {

		if (element.value == '1') {

    	elems[i].style.display = "block";
			elems[i].childNodes[3].setAttribute("required","");

    } else {

    	elems[i].style.display = "none";
			elems[i].childNodes[3].removeAttribute("required");

    }

	}

}
</script>
